extend layout
block content
  .container
    .row
      .col-md-9.row-article
        h1.article-title #{article.name}
        input.article-id(type='hidden', value=article.id)
        .article-info
          p #{article.date.format('LLLL')}　tags: #{article.tags.join(' ')} 
        .article-data 
          !=article.html
        .before-and-next.cf
          a.before-article
          a.next-article
        .comment
          // Nav tabs
          ul.nav.nav-tabs
            li.active
              a.comment-tabs(href='#uyan', data-toggle='tab') 友言
            li
              a.comment-tabs(href='#disqus', data-toggle='tab') disqus
          // Tab panes
          .tab-content
            #uyan.tab-pane.active
              // UY BEGIN
              #uyan_frame
              script(type='text/javascript', src='http://v2.uyan.cc/code/uyan.js?uid=1934226')
              // UY END
            #disqus.tab-pane
              #disqus_thread
              script(type='text/javascript').
                /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                var disqus_shortname = 'mpr0xy'; // required: replace example with your forum shortname
                /* * * DON'T EDIT BELOW THIS LINE * * */
                (function() {
                    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                })();
              noscript Please enable JavaScript to view the 
                a(href="http://disqus.com/?ref_noscript") comments powered by Disqus.
              a.dsq-brlink(href='http://disqus.com') comments powered by
                span.logo-disqus Disqus
      .col-md-3.row-widget
        include widget

